{
  "name": "dual-listbox-workspace",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve demo-app",
    "build": "ng build --configuration production",
    "build:lib": "ng build dual-listbox --configuration production",
    "pack:lib": "npm run build:lib && (cd dist/dual-listbox && npm pack)",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "ng lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "build-storybook -o storybook-static",
    "smoke": "npm run pack:lib && echo 'Tarball created in dist/dual-listbox'",
    "release:local": "cd dist/dual-listbox && npm publish --access public"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.7",
    "@angular-eslint/schematics": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@storybook/angular": "^7.0.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.2",
    "ng-packagr": "^20.0.0",
    "semantic-release": "^21.0.0",
    "ts-jest": "^29.4.5",
    "typescript": "~5.8.2"
  },
  "peerDependencies": {
    "@angular/common": ">=20.0.0 <22.0.0",
    "@angular/core": ">=20.0.0 <22.0.0"
  }
}
